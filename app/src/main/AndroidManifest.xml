<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.programacao.app_pizzaria" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App_pizzaria" >
        <activity
            android:name=".produto.ListaProdutoActivity"
            android:label="@string/title_activity_list_produto"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" >
        </activity>
        <activity
            android:name=".usuario.ListaUsuarioActivity"
            android:label="@string/listUsuario"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" >
        </activity>
        <activity
            android:name=".pedido.novoPedidoActivity"
            android:label="@string/title_activity_novo_pedido"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" />
        <activity
            android:name=".usuario.cadUsuarioActivity"
            android:label="@string/title_activity_cad_usuario"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" />
        <activity
            android:name=".produto.cadProdutoActivity"
            android:label="@string/title_activity_cad_produto"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.App_pizzaria.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>